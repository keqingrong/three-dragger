{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
  },
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
  },
  "rules": {
      "comma-dangle": 2,
      "quotes": [1, "single"],
      "no-undef": 2,
      "global-strict": 0,
      "semi": [1, "always"],
      "no-extra-semi": 1,
      "no-unused-vars": 0,
      "no-mixed-spaces-and-tabs": 2,
      "curly": [1],
      "indent": [2, 2, { "SwitchCase": 1 }],
      "no-underscore-dangle": 0,
      "no-console": 1,
      "no-trailing-spaces": [1, { "skipBlankLines": true }],
      "no-unreachable": 1,
      "no-alert": 1,
      "linebreak-style": [2, "unix"],
      "object-curly-spacing": [1, "always"]
  }
}
