{
  "name": "three-dragger",
  "version": "0.0.1-alpha.0",
  "description": "Drag three.js objects without modifying the original's position",
  "main": "dist/three-dragger.umd.js",
  "jsnext:main": "dist/three-dragger.esm.js",
  "module": "dist/three-dragger.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c && npm run uglify",
    "watch": "rollup -w -c",
    "lint": "eslint --ext .js src/",
    "lint-fix": "eslint --fix --ext .js src/",
    "open": "opn http://localhost:3000/example",
    "serve": "serve -p=3000 ./",
    "start": "npm-run-all -p watch serve open",
    "uglify": "uglifyjs dist/three-dragger.umd.js -c -m -o dist/three-dragger.umd.min.js"
  },
  "keywords": [
    "drag",
    "three",
    "three.js"
  ],
  "author": "keqingrong <keqingrong1992@gmail.com> (https://keqingrong.github.io/)",
  "repository": "keqingrong/three-dragger",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-syntax-class-properties": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.3",
    "eventemitter3": "^3.0.1",
    "npm-run-all": "^4.1.2",
    "opn-cli": "^3.1.0",
    "pascalcase": "^0.1.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.1",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "serve": "^6.4.10",
    "uglify-es": "^3.3.10"
  },
  "peerDependencies": {
    "three": "^0.80.0"
  }
}
